{
  "name": "@editneo/sync",
  "version": "0.1.3",
  "description": "Yjs-based CRDT sync manager for EditNeo with offline and WebSocket support",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "yjs": "^13.6.10",
    "y-indexeddb": "^9.0.12",
    "y-websocket": "^1.5.0",
    "@editneo/core": "^0.1.2"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.11.24"
  },
  "license": "MIT"
}
